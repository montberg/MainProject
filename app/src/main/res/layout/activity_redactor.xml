<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ctl"
    tools:context=".Redactor"
    android:scrollbars="vertical"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout3"
                android:layout_marginHorizontal="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Показать на карте"
                    android:id="@+id/showOnMap"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удалить"
                    android:id="@+id/deletePlatform"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/picList"
                    android:layout_below="@id/deletePlatform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/lblAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/picList"
                    android:text="@string/Address"
                    android:textSize="17sp" />
                <AutoCompleteTextView
                    android:id="@+id/chooseAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblAdress"
                    android:hint="Адрес"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"

                    android:inputType="text|textMultiLine"
                    android:textSize="17sp" />

                <AutoCompleteTextView
                    android:id="@+id/autoTipOsnovania"
                    android:isScrollContainer="true"
                    android:completionThreshold="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chooseAddress"
                    android:hint="Тип основания"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"/>

                <EditText
                    android:id="@+id/txtPloshad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/autoTipOsnovania"
                    android:hint="Площадь, м^2"
                    android:inputType="numberDecimal"
                    android:textSize="17sp" />

                <CheckBox
                    android:id="@+id/checkUvelichitPloshad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPloshad"
                    android:text="Возможно увеличение площади?" />

                <CheckBox
                    android:id="@+id/checkSReconstrukcjei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkUvelichitPloshad"
                    android:text="Нужна реконструкция"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkOgrazhdenie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkSReconstrukcjei"
                    android:text="Есть ли ограждение?" />

                <AutoCompleteTextView
                    android:id="@+id/autoOgrazhdenie"
                    android:layout_width="match_parent"
                    android:completionThreshold="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkOgrazhdenie"
                    android:hint="Материал ограждения"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <AutoCompleteTextView
                    android:completionThreshold="1"
                    android:id="@+id/autoTipMusora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addContainer"
                    android:hint="Тип мусора"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/autoObjemKonteinerov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/autoTipMusora"
                    android:hint="Объем контейнеров"
                    android:inputType="numberDecimal"
                    android:textSize="17sp" />
                <Button
                    android:id="@+id/addContainer"
                    android:layout_alignEnd="@id/autoTipMusora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbutton"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:layout_below="@+id/autoOgrazhdenie"
                    android:text="Добавить" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/autoObjemKonteinerov">
                </RelativeLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/containerListView"
                android:layout_below="@id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout2">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="Добавить фото"
                android:src="@drawable/ic_action_addphoto" />
            <Button
                android:id="@+id/commitChanges"
                android:layout_below="@id/btnAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:text="Добавить площадку" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>